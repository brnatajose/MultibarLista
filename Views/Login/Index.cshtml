@{
    ViewData["Title"] = "Login";
}
<section class="main-container-login pt-5">
    <div class="main-container-login-box container justify-content-center align-items-center d-flex line-length-sm">
        <article class="rounded text-center mt-5 w-100 p-2">
            <i class="fa-solid fa-face-smile fa-5x" style="color: #F46023;"></i>
            <h3 class="mt-3">
                Inicie sessão na sua conta
            </h3>
            <span>
                Vamos fazer com que você faça login e vá direto para suas listas.
            </span>
            <form class="pb-3 pt-3 text-start" method="post">
                <div>
                    <label class="form-label fw-bold">Email</label>
                    <div class="input-icons form-group mb-3">
                        <i class="fa-regular fa-envelope icon"></i>
                        <input class="form-control input-field" type="email" placeholder="Digite seu email">
                    </div>
                    <label class="form-label fw-bold">Senha</label>
                    <div class="input-icons form-group">
                        <i class="fa-solid fa-lock icon"></i>
                        <input class=" form-control input-field" type="password" placeholder="Digite sua senha">
                    </div>
                    <div class="form-check d-flex justify-content-between mt-3 mb-3">
                        <label class="form-check-label" for="checkLembrar">
                            <input type="checkbox" class="form-check-input" id="checkLembrar">
                            Lembrar-me
                        </label>
                        <a href="#">Esqueceu sua senha?</a>
                    </div>
                    <button type="submit" class="btn azul text-white mt-2 w-100 fw-bold">Entrar</button>
                </div>
            </form>
         
        </article>

    </div>
    <p class="d-flex justify-content-center mt-3">
        <span class="me-2">Não tem uma conta?</span><a href="#"> Inscreva-se agora mesmo!</a>

    </p>
</section>